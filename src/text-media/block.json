{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "everstox/text-media",
	"version": "0.1.0",
	"title": "Text Media",
	"category": "layout",
	"description": "Text media block",
	"supports": {
		"html": false,
	  	"align": false,
	  	"anchor": true,
		"color": {
		  "__experimentalDefaultControls": {
			"background": true,
			"text": true
		  }
		}
	},
  	"attributes": {
	  "reverseOnDesktop": {
		"type": "boolean",
		"default": false
	  },
	  "mediaLeftSide": {
		"type": "boolean",
		"default": false
	  },
	  "verticalAlignment": {
		"type": "string"
	  }
	},
	"textdomain": "everstox",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
